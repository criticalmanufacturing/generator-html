{
    // Configure glob patterns for excluding files and folders. 
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
        "**/node_modules/": true,
        "generators/*.js": { "when": "$(basename).ts"},
        "generators/*/*.js": { "when": "$(basename).ts"},
        "**/*.js.map": true,
        "**/*.d.ts": true
    },
    "typescript.tsdk": "node_modules\\typescript\\lib",
}